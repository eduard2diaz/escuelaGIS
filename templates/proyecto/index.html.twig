<!DOCTYPE html>

<title>Proyecto index</title>

{% block body %}
    <h1>Proyecto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fechainicio</th>
                <th>Fechafin</th>
                <th>Montoasignado</th>
                <th>Montogastado</th>
                <th>Saldofinal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proyecto in proyectos %}
            <tr>
                <td>{{ proyecto.id }}</td>
                <td>{{ proyecto.fechainicio ? proyecto.fechainicio|date('Y-m-d') : '' }}</td>
                <td>{{ proyecto.fechafin ? proyecto.fechafin|date('Y-m-d') : '' }}</td>
                <td>{{ proyecto.montoasignado }}</td>
                <td>{{ proyecto.montogastado }}</td>
                <td>{{ proyecto.saldofinal }}</td>
                <td>
                    <a href="{{ path('proyecto_show', {'id': proyecto.id}) }}">show</a>
                    <a href="{{ path('proyecto_edit', {'id': proyecto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('proyecto_new') }}">Create new</a>
{% endblock %}
