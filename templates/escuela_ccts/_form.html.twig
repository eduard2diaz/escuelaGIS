{{ form_start(form,{'attr':{
    'id': form_id|default('escuela_ccts_new'),
    'class': 'm-form m-form--state'
}}) }}
<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.value) }}
                </label>
                <div>
                    {{ form_widget(form.value) }}
                    {{ form_errors(form.value) }}
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_errors(form) }}
{{ form_rest(form) }}
<div class="modal-footer">
    <a class="btn btn-sm btn-secondary" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    {% if eliminable is defined and eliminable==true %}
        <a class="btn btn-danger color-white btn-sm  eliminar_escuela_ccts"
           data-href="{{ path('escuela_ccts_delete', { 'id': escuelaccts.id }) }}"
           data-csrf="{{ csrf_token('delete' ~ escuelaccts.id) }}">
            <i class="flaticon-delete-1"></i> Eliminar</a>
    {% endif %}
    <button class="btn btn-sm btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit"></i>
        <span class="ladda-label">{{ action |default('Guardar') }}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>
{{ form_end(form) }}