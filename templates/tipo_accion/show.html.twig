<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Detalles del tipo de acción
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
        </div>
        <div>

            <div class="modal-body" id="modal-body">
                <div class="row">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Acción</th>
                            <td colspan="3">{{ tipoaccion.accion }}</td>
                        </tr>
                        <tr>
                            <th>Fecha de captura</th>
                            <td>{{ tipoaccion.fechacaptura ? tipoaccion.fechacaptura|date('Y-m-d') : '' }}</td>
                            <th>Estatus</th>
                            <td>{{ draw_estatus(tipoaccion.estatus.code,tipoaccion.estatus.estatus) }}</td>
                        </tr>
                        <tr>
                            <th>Descripción</th>
                            <td colspan="3">{{ tipoaccion.descripcion }}</td>
                        </tr>

                        </tbody>
                    </table>

                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-sm btn-secondary" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
            </div>
        </div>
    </div>
</div>
