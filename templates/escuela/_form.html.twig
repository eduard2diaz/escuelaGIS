{{ form_start(form,{'attr':{
    'id': form_id|default('escuela_new'),
    'class': 'm-form m-form--state'
}}) }}
<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.escuela) }}
                </label>
                <div>
                    {{ form_widget(form.escuela) }}
                    {{ form_errors(form.escuela) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.ccts) }}
                </label>
                <div>
                    {{ form_widget(form.ccts) }}
                    {{ form_errors(form.ccts) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.d_codigo) }}
                </label>
                <div>
                    {{ form_widget(form.d_codigo) }}
                    {{ form_errors(form.d_codigo) }}
                </div>
            </div>
        </div>
    </div>

    <fieldset>
        <legend>Otros datos</legend>
        <hr/>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group m-form__group">
                    <label>
                        {{ form_label(form.asentamiento) }}
                    </label>
                    <div>
                        {{ form_widget(form.asentamiento) }}
                        {{ form_errors(form.asentamiento) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group m-form__group">
                    <label>
                        {{ form_label(form.tipoasentamiento) }}
                    </label>
                    <div>
                        {{ form_widget(form.tipoasentamiento) }}
                        {{ form_errors(form.tipoasentamiento) }}
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group m-form__group">
                    <label>
                        {{ form_label(form.estado) }}
                    </label>
                    <div>
                        {{ form_widget(form.estado) }}
                        {{ form_errors(form.estado) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group m-form__group">
                    <label>
                        {{ form_label(form.municipio) }}
                    </label>
                    <div>
                        {{ form_widget(form.municipio) }}
                        {{ form_errors(form.municipio) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group m-form__group">
                    <label>
                        {{ form_label(form.calle) }}
                    </label>
                    <div>
                        {{ form_widget(form.calle) }}
                        {{ form_errors(form.calle) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group m-form__group">
                    <label>
                        {{ form_label(form.noexterior) }}
                    </label>
                    <div>
                        {{ form_widget(form.noexterior) }}
                        {{ form_errors(form.noexterior) }}
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</div>
{{ form_errors(form) }}
{{ form_rest(form) }}
<div class="modal-footer">
    <a class="btn btn-sm btn-secondary" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    {% if escuela.id is not empty%}
        <a class="btn btn-danger btn-sm  eliminar_escuela"
           data-href="{{ path('escuela_delete', { 'id': escuela.id }) }}"
           data-csrf="{{ csrf_token('delete' ~ escuela.id) }}">
            <i class="flaticon-delete-1"></i> Eliminar</a>
    {% endif %}
    <button class="btn btn-sm btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit"></i>
        <span class="ladda-label">{{ action |default('Guardar') }}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>
{{ form_end(form) }}
