{% extends 'layout/autenticado.html.twig' %}
{% block body %}
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">Municipio</h3>
            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            <a data-href="{{ path('municipio_new') }}" class="btn btn-label-primary btn-bold btn-icon-h kt-margin-l-10 edicion">
                Nuevo
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <!--begin:: Widgets/Daily Sales-->
            <div class="kt-portlet kt-portlet--height-fluid">
                <div class="kt-widget14">
                    <div class="kt-widget14__header kt-margin-b-30">
                        <h3 class="kt-widget14__title">
                            Listado
                        </h3>
                    </div>
                    <table class="table" id="municipio_entity_table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Clave</th>
                            <th>Estado</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set i=(municipios.page |default(1) -1)*knp_num_items_per_page+1 %}
                        {% for municipio in municipios %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ municipio.nombre }}</td>
                                <td>{{ municipio.clave }}</td>
                                <td>{{ municipio.estado }}</td>
                                <td>
                                    <ul class="hidden_element list-inline pull-right">
                                        <li class="list-inline-item"><a class="btn btn-primary btn-sm edicion" data-href="{{ path('municipio_edit', {'id': municipio.id}) }}"><i class="fa fa-edit"></i>Editar</a></li>
                                    </ul>
                                </td>
                            </tr>
                            {% set i=1+i %}
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(municipios) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/entity/municipio.js','app') }}" type="text/javascript"></script>
    <script>
        municipio.init();
    </script>
{% endblock %}